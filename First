import os
System = os.listdir("C:\Windows")
SysC = ','.join(System)
print("here is Windows folder")
print(System)
if "addins" in System:
    Addins = os.listdir("C:\Windows\Performance")
    print ("Here is addins folder")
    print (Addins)
    if "WinSAT" in Addins:
        This = os.listdir("C:\Windows\Performance\WINsat")
        if "winsat.log" in This:
            print("opening WinSAT log")
            os.startfile("C:\Windows\Performance\WINsat\winsat.log")
            Writing = open("WINSAT.txt", "w")
            Log = open("C:\Windows\Performance\WINsat\winsat.log", "r")
            Writing.write(Log.read())
            
